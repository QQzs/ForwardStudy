<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="dashOrientation" format="integer"/>
    </declare-styleable>

    <!-- 多状态切换view -->
    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference"/>
        <attr name="msv_emptyView" format="reference"/>
        <attr name="msv_errorView" format="reference"/>
        <attr name="msv_centerView" format="reference"/>
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0"/>
            <enum name="error" value="1"/>
            <enum name="empty" value="2"/>
            <enum name="loading" value="3"/>
            <enum name="center" value="4"/>
        </attr>
    </declare-styleable>

    <!-- 五星评价 -->
    <declare-styleable name="RatingBar">
        <!--星星间距-->
        <attr format="dimension" name="starDistance"/>
        <!--星星大小-->
        <attr format="dimension" name="starSize"/>
        <!--星星个数-->
        <attr format="integer" name="starCount"/>
        <!--星星空图-->
        <attr format="reference" name="starEmpty"/>
        <!--星星满图-->
        <attr format="reference" name="starFill"/>
        <!--是否可点-->
        <attr format="boolean" name="isTouch"/>
    </declare-styleable>

    <declare-styleable name="HeaderScrollView">
        <attr name="top_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PullZoomRecyclerView">
        <attr name="zoom_headerView" format="reference"/>
        <attr name="zoom_header_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DownLoadingView">
        <attr name="loadingText" format="string"/>
        <attr name="loadingTextAppearance" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BannerView">
        <!--翻页间隔时长-->
        <attr name="pagingIntervalTime" format="integer"/>
        <!--翻页动画减速倍数-->
        <attr name="decelerateMultiple" format="integer"/>
        <!--指示器控件的ViewId-->
        <attr name="bannerIndicator" format="reference"/>
        <!--标题控件-->
        <attr name="titleView" format="reference"/>
        <!--子标题控件-->
        <attr name="subTitleView" format="reference"/>
        <!--翻页动画差值器-->
        <attr name="interpolator" format="reference"/>
        <!--只有一张图片时的显示模式-->
        <attr name="singlePageMode" format="integer">
            <!--没有(不显示)指示器-->
            <flag name="noIndicator" value="0x01"/>
            <!--不可以也不能翻页-->
            <flag name="canNotPaging" value="0x02"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BannerIndicator">
        <!--总页数，如果是配合BannerView使用的则以BannerView的页数为准。这个属性最大的用途就是在写布局文件时可以看到效果。-->
        <attr name="totalCount" format="integer"/>
        <attr name="android:gravity"/>
    </declare-styleable>

    <declare-styleable name="PointIndicatorView">
        <!--点的半径-->
        <attr name="pointRadius" format="dimension"/>
        <!--选中的点的半径-->
        <attr name="selectedPointRadius" format="dimension"/>
        <!--点与点之间的间距，默认为最小的点的直径。-->
        <attr name="pointSpacing" format="dimension"/>
        <!--点的颜色-->
        <attr name="pointColor" format="color"/>
        <!--选中时点的颜色-->
        <attr name="selectedPointColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="NumberIndicatorView">
        <!--字体大小-->
        <attr name="android:textSize"/>
        <!--所有的字体颜色-->
        <attr name="android:textColor"/>
        <!--分割符号文本-->
        <attr name="separator" format="string"/>
        <!--分隔符文本颜色-->
        <attr name="separatorTextColor" format="color"/>
        <!--当前页面码字体颜色-->
        <attr name="currentPageTextColor" format="color"/>
        <!--总页数字体颜色-->
        <attr name="totalPageTextColor" format="color"/>
    </declare-styleable>

    <string-array name="category_name">
        <item>头条</item>
        <item>新闻</item>
        <item>财经</item>
        <item>体育</item>
        <item>娱乐</item>
        <item>军事</item>
        <item>教育</item>
        <item>科技</item>
        <item>NBA</item>
        <item>股票</item>
        <item>星座</item>
        <item>女性</item>
        <item>健康</item>
        <item>育儿</item>

    </string-array>

    <string-array name="category_type">
        <item>__all__</item>
        <item>video</item>
        <item>news_hot</item>
        <item>news_society</item>
        <item>news_entertainment</item>
        <item>news_tech</item>
        <item>news_car</item>
        <item>news_sports</item>
        <item>news_finance</item>
        <item>news_military</item>
        <item>news_world</item>
        <item>news_fashion</item>
        <item>news_game</item>
        <item>news_travel</item>
    </string-array>
</resources>