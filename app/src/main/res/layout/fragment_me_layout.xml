<?xml version="1.0" encoding="utf-8"?>
<com.zs.project.view.ColorfulView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorfull_bg_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zs.project.view.HeadZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_avatar_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/default_img"
                android:scaleType="centerCrop"/>


        </RelativeLayout>
    </com.zs.project.view.HeadZoomScrollView>




</com.zs.project.view.ColorfulView>