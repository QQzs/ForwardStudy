<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/padding_size"
        android:paddingRight="@dimen/padding_size">

        <ImageView
            android:id="@+id/iv_me_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/default_img"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/font_default"
            android:textSize="@dimen/fontsize14"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_me_icon"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/iv_turn_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_turn_img"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</RelativeLayout>