<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_article_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:contentPadding="4dp"
        android:foreground="?attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/iv_article_avatar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_default_avatar" />

                <TextView
                    android:id="@+id/tv_article_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_article_avatar"
                    android:text="DDDDD"
                    android:textColor="@color/font_default"
                    android:textSize="@dimen/fontsize13" />

                <TextView
                    android:id="@+id/tv_article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1time"
                    android:textColor="@color/font_light_gray"
                    android:textSize="@dimen/fontsize12" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="afdiafiahfijahfiahfiafhai"
                android:textSize="@dimen/fontsize15"
                android:textColor="@color/font_default"
                android:maxLines="2"
                android:paddingRight="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_article_chapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1time"
                    android:textSize="@dimen/fontsize15"
                    android:textColor="@color/app_main_color"
                    android:layout_centerVertical="true"
                    />

                <com.zs.project.view.SwitchColorView
                    android:id="@+id/iv_article_collect"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    app:switchImage="@mipmap/ic_collect_img"
                    app:switchColor="@color/app_main_color"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>