<?xml version="1.0" encoding="utf-8"?>
<com.zs.project.view.ColorfulView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/colorfull_bg_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zs.project.ui.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/home_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cut_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/title_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_news"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_news"
                        android:layout_width="@dimen/main_tab_size"
                        android:layout_height="@dimen/main_tab_size"
                        android:background="@mipmap/home_bar_news_nor"
                        android:padding="2dp"
                        skin:enable="true"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tv_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="资讯"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_home_video"
                        android:layout_width="@dimen/main_tab_size"
                        android:layout_height="@dimen/main_tab_size"
                        android:background="@mipmap/home_bar_video_nor"
                        android:padding="2dp"
                        skin:enable="true"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tv_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="视频"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_douban"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_product"
                        android:layout_width="@dimen/main_tab_size"
                        android:layout_height="@dimen/main_tab_size"
                        android:background="@mipmap/home_bar_dou_nor"
                        android:padding="2dp"
                        skin:enable="true"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="豆瓣"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_me"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_me"
                        android:layout_width="@dimen/main_tab_size"
                        android:layout_height="@dimen/main_tab_size"
                        android:background="@mipmap/home_bar_user_nor"
                        skin:enable="true"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:id="@+id/tv_me"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="我的"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</com.zs.project.view.ColorfulView>
