<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/public_title_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_height">

        <android.support.v7.widget.CardView
            android:id="@+id/item_color_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?selectableItemBackground"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_size"
                android:paddingRight="@dimen/padding_size">

                <TextView
                    android:id="@+id/tv_setting_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查版本"
                    android:textSize="@dimen/fontsize13"
                    android:textColor="@color/font_default"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_setting_color_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textSize="@dimen/fontsize13"
                    android:textColor="@color/font_default"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>